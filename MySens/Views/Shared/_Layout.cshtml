<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/reset.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/sass/style1.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/sass/style2.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <header class="col-12">
        <div id="logo" class="col-6">
            <img src="http://kamalteta.com/Media/logo_i_vector_hvid.png" alt="Mysensei logo" class="col-6">
        </div>

        <nav class="navigation col-6">
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">About</a></li>
                <li class="loginBtn"><a href="../Account/Login">Login</a></li>
            </ul>
        </nav>
    </header>
    
    @RenderBody()

    <footer class="col-12">
        <div id="social">
            <i class="fa fa-facebook-official"></i>
            <i class="fa fa-twitter-square"></i>
            <i class="fa fa-google-plus-square"></i>
            <i class="fa fa-linkedin-square"></i>
            <i class="fa fa-pinterest-square"></i>
        </div>
        <p>© Roxana, Yordan, Kamal, Robert</p>
    </footer>


    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/script.js"></script>

</body>
</html>